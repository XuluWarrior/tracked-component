{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "./src",
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}